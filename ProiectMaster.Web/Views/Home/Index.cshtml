@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Home Page";
    var detailsRoute = "/Details/{0}";
}

<div class="row">

    @foreach( var product in Model)
    {
        <div class="d-md-table-cell">
            <div class="card mb-5">

                <div class="card-header">
                    <h4 class="my-md-n2 font-weight-normal">
                        <label style="font-size:23px; color:#523bde;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%" src="~/@product.ImagePath" alt="Imagine indisponibila" />

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#b200ff"><b>@product.Price RON</b></label>
                        </div>
                        <a href="@string.Format(detailsRoute, product.Id)" class="btn pull-right btn-outline-info">Detalii</a>
                    </div>
                </div>

            </div>
        </div>
    }

</div>